<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="PrimaryButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:background">@drawable/bg_primary_button</item>
        <item name="android:fontFamily">@font/opensans_regular</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingStart">45dp</item>
        <item name="android:paddingEnd">45dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="SecondaryButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_secondary_button</item>
        <item name="android:fontFamily">@font/opensans_regular</item>
        <!--<item name="android:paddingBottom">5dp</item>-->
        <item name="android:paddingStart">25dp</item>
        <item name="android:paddingEnd">25dp</item>
        <!--<item name="android:paddingTop">5dp</item>-->
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="OtpInputBoxStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/bg_edit_text</item>
        <item name="android:padding">10dp</item>
        <item name="android:fontFamily">@font/opensans_regular</item>
        <item name="android:gravity">center</item>
        <item name="android:inputType">number</item>
        <item name="android:maxEms">1</item>
        <item name="android:maxLength">1</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorHint">@color/gray_text_color</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="InputBoxStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_edit_text</item>
        <item name="android:padding">10dp</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:fontFamily">@font/opensans_regular</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:inputType">text</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorHint">@color/gray_text_color</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>
